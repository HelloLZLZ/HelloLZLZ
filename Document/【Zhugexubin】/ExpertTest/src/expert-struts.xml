<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="expert" namespace="/expert" extends="struts-default">
		<global-results>
			<result name="error" type="redirect">/resultPage/login_fail.jsp</result>
		</global-results>
        <action name="expert_*" class="org.expert.action.LoginAction" method="{1}">
       	 	<result name="input">/login.jsp</result>
            <result name="login_success" type="redirect">/loginPage/register.jsp</result>
            <result name="expert_login_success" type="redirect">/common/home.jsp</result>
            <result name="business_login_success" type="redirect">/common/home.jsp</result>
            <result name="register_success">/loginPage/login.jsp</result>
            <result name="uname_exist">/resultPage/existingname.jsp</result>
            <result name="logout_success" type="redirect">/login.jsp</result>
            <result name="not-login" type="redirect">/loginPage/login.jsp</result>
        </action>
 
    </package>
</struts>