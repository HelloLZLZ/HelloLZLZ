<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.expert.pojo">

	<class name="Expert" table="t_expert">
		<id name="eid" column="eid" type="int" >
		   <generator class="increment"/>  
		</id>
		<property name="username" type="string" unique="true">
		   <column name="eusername"/>
		</property>
		<property name="password" type="string" >
		   <column name="epwd"/>
		</property>
		<property name="name" type="string" >
		   <column name="name"/>
		</property>	
		<property name="phone" type="string" >
		   <column name="phone"/>
		</property>	
		<property name="major" type="string">
		   <column name="emajor"/>
		</property>
		<property name="domain" type="string">
		   <column name="edomain"/>
		</property>
		<property name="year" type="string" >
		   <column name="eyears"/>
		</property>


		
	</class>
</hibernate-mapping>