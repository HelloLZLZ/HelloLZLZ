<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.expert.pojo">

	<class name="Bussiness" table="t_bussiness">
		<id name="bid" column="bid" type="int" >
		   <generator class="increment"/>  
		</id>
		<property name="username" type="string" unique="true">
		   <column name="busername"/>
		</property>
		<property name="password" type="string" >
		   <column name="bpwd"/>
		</property>
		<property name="name" type="string" >
		   <column name="bname"/>
		</property>	
		<property name="tel" type="string" >
		   <column name="btel"/>
		</property>	
		<property name="net" type="string">
		   <column name="bnet"/>
		</property>
		<property name="domain" type="string">
		   <column name="bdomain"/>
		</property>
		<property name="intro" type="string" >
		   <column name="bintro"/>
		</property>


		
	</class>
</hibernate-mapping>